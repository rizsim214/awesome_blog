<section class="jumbotron text-dark">
    <div class="row">
        <div class="col-7">
            <div class="media">
                <%= image_tag gravatar_for(@user), class: "rounded-square mr-2" %>
                <div class="media-body no-gutter">
                    <h3 class="text-primary"><%= @user.name %></h3>
                    <p class="text-muted ml"><%= @user.email %></p>
                </div>
            </div>
        </div>
        <div class="col-5">
            <ul class="d-flex justify-content-between align-items-center my-1 border-bottom list-group-flush text-center">
                <div class="row">
                    <li class="col-4 list-unstyled"><h5><%= link_to pluralize(20, "micropost") , "#" , class:"text-info text-decoration-none " %></h5></li>
                    <li class="col-4 list-unstyled"><h5><%= link_to pluralize(17, "follower") , "#" , class:"text-info text-decoration-none " %></h5></li>
                    <li class="col-4 list-unstyled"><h5><%= link_to pluralize(2, "following") , "#" , class:"text-info text-decoration-none  " %></h5></li>
                </div>
            </ul>
        </div>
    </div>
</section>

<section class="container px-5"> 
        <% @microposts.each do |micropost| %> 
            <div class="card-body border-bottom">
                <div class="media py-2">
                    <%= image_tag gravatar_for(current_user), class: "rounded-square mr-3 " %>
                    <div class="media-body col-11">
                        <h3 class="mt-0"><%= link_to micropost.user.name , "#"  %></h3>
                        <p class="pl-3"><%= micropost.content %></p>
                    </div>
                    <% if current_user == micropost.user %>
                        <div class="media-body col-1">
                            <%= link_to micropost_path(micropost) , method: :delete do %>
                            <i class="fas fa-times text-danger"></i>
                            <%end %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
</section>