<% provide(:title , "Profile") %>
<div class="row">
    <div class="card col-4 border-0">
        <%= image_tag gravatar_for(current_user) , class: "rounded-circle mx-auto mt-3" %>
        <div class="card-body text-center ">
            <h3 class="card-title"><%= current_user.name %></h3>
            <h6 class="card-subtitle pb-2  text-muted border-bottom"><%= current_user.email %></h6>
            <ul class="d-flex justify-content-between align-items-center my-1 border-bottom list-group my-4">
                <div class="row">
                    <li class="col-4 list-unstyled"><%= link_to pluralize(20, "micropost") , "#" , class:"text-primary " %></li>
                    <li class="col-4 list-unstyled"><%= link_to pluralize(17, "follower") , "#" , class:"text-primary " %></li>
                    <li class="col-4 list-unstyled"><%= link_to pluralize(2, "following") , "#" , class:"text-primary " %></li>
                </div>
            </ul>
            <div class="my-4">
                <%= form_with(model: @micropost, local: true) do |form| %>
                    <%= form.text_area :content , class: "form-control pb-5" , placeholder: "Share your thought" %>
                    <%= form.file_field :picture , class:"mt-3" %>
                    <%= form.submit "Post" , class:"btn btn-primary btn-block mt-3" %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="card col-8 border-0">
        <h2 class="text-center border-bottom my-2">Feed</h2>
        <% @microposts.each do |micropost| %> 
            <div class="card-body ">
                <div class="media py-1">
                    <%= image_tag gravatar_for(current_user), class: "rounded-square mr-3 " %>
                    <div class="media-body col-11">
                        <h3 class="mt-0"><%= link_to micropost.user.name , "#"  %></h3>
                        <p class="pl-3"><%= micropost.content %></p>
                    </div>
                    <% if current_user == micropost.user %>
                        <div class="media-body col-1">
                            <%= link_to micropost_path(micropost) , method: :delete do %>
                            <i class="fas fa-times text-danger"></i>
                            <%end %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>
 
