
<% provide(:title, "Sign In") %>
    
    <form action="" class="col-md-6 mx-auto mt-3">
        <div class="text-center">
            <h3>Sign In</h3>
            <p>Login to your account now!</p>
        </div>  
        
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" class="form-control" placeholder="example@example.com">
        </div>
        <div class="form-group">
            <label for="pwd">Password</label>
            <input type="password" id="pwd" class="form-control" placeholder="Password">
        </div>
        
        <button type="submit" class="btn btn-success btn-block">Login Account</button>
    </form>

 
